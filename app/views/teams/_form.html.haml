= form_with(model: team, local: true) do |form|
  - if team.errors.any?
    .alert.alert-info
      - team.errors.full_messages.each do |message|
        = message
  .team_form
    %div
      = form.label :title
      = form.text_field :title
    %div
      = form.label :logo
      - if team.logo.thumb.present?
        = image_tag team.logo.thumb, size: 100
      = form.file_field :logo
    = form.submit nil, class: 'btn-success'
