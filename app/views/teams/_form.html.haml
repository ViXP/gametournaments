= form_with(model: team, local: true) do |form|
  - if team.errors.any?
    .alert.alert-info
      - team.errors.full_messages.each do |message|
        = message
  .team_form
    = form.label :title
    = form.text_field :title
    %br
    = form.label :logo
    = form.file_field :logo
    %br
    - if team.logo.thumb.present?
      = image_tag team.logo.thumb, size: 150, class: 'img-thumbnail'
    %br
    %hr
    = form.submit nil, class: 'btn-success'
