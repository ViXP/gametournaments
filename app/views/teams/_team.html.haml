%article.row
  .col
    %strong Created at:
    %span= date_formatter team.created_at
  .col
    = image_tag team.logo.thumb, size: 100, alt: team.title, |
      title: team.title
  .col-6
    %span= team.title
  .col
    %strong Captain:
    %span= team.captain.login
  - if team.captain_id == logged?
    .col
      = link_to 'Edit', edit_team_path(team.id)
      = button_to 'Delete', team_path(team.id), method: :delete